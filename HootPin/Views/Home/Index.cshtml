@model IEnumerable<HootPin.Models.Hoot>

@{
    ViewBag.Title = "Home Page";
}

    <ul class="hoots">
        @foreach (var hoot in Model)
        {
            <li>
                <div class="date">
                    <div class="month">@hoot.DateTime.ToString("MMM")</div>
                    <div class="day">@hoot.DateTime.ToString("d ")</div>
                </div>

                <div class="details">
                    <span class="artist">@hoot.Artist.Name</span>
                    <span class="genre">@hoot.Genre.Name</span>
                </div>
            </li>
        }
    </ul>